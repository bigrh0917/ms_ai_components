# 生产环境配置示例
# 将此文件复制到 EC2 服务器的 /home/用户名/.env.production

# 应用配置
APP_NAME="FastAPI Service"
DEBUG=False
API_V1_STR="/api/v1"

# 安全配置（生产环境必须修改！）
SECRET_KEY="CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-AT-LEAST-32-CHARACTERS-LONG"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
TEMP_TOKEN_EXPIRE_MINUTES=5

# 数据库配置（使用 RDS 或 EC2 上的 MySQL）
DATABASE_HOST="your-rds-endpoint.rds.amazonaws.com"
DATABASE_PORT=3306
DATABASE_USER="admin"
DATABASE_PASSWORD="your-strong-password"
DATABASE_NAME="fastapi_prod"

# Redis 配置（使用 ElastiCache 或 EC2 上的 Redis）
REDIS_HOST="your-redis-endpoint.cache.amazonaws.com"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# 验证码配置
CAPTCHA_LENGTH=4
CAPTCHA_EXPIRE_SECONDS=120
EMAIL_CODE_LENGTH=6
EMAIL_CODE_EXPIRE_SECONDS=300

# 速率限制配置
RATE_LIMIT_CAPTCHA_LIMIT=10
RATE_LIMIT_CAPTCHA_WINDOW=60
RATE_LIMIT_EMAIL_CODE_LIMIT=3
RATE_LIMIT_EMAIL_CODE_WINDOW=60
RATE_LIMIT_REGISTER_LIMIT=5
RATE_LIMIT_REGISTER_WINDOW=3600

# 邮件配置（使用真实的邮件服务）
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="your-email@gmail.com"
SMTP_FROM_NAME="FastAPI Service"

# CORS 配置（生产环境指定具体域名）
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

