# 应用配置
APP_NAME="FastAPI Service"
DEBUG=True
API_V1_STR="/api/v1"

# 安全配置
SECRET_KEY="your-secret-key-change-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
TEMP_TOKEN_EXPIRE_MINUTES=5

# 数据库配置
DATABASE_HOST="localhost"
DATABASE_PORT=3306
DATABASE_USER="root"
DATABASE_PASSWORD="your-password"
DATABASE_NAME="fastapi"

# Redis 配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# 验证码配置
CAPTCHA_LENGTH=4
CAPTCHA_EXPIRE_SECONDS=120
EMAIL_CODE_LENGTH=6
EMAIL_CODE_EXPIRE_SECONDS=300

# 速率限制配置
RATE_LIMIT_CAPTCHA_LIMIT=10
RATE_LIMIT_CAPTCHA_WINDOW=60
RATE_LIMIT_EMAIL_CODE_LIMIT=3
RATE_LIMIT_EMAIL_CODE_WINDOW=60
RATE_LIMIT_REGISTER_LIMIT=5
RATE_LIMIT_REGISTER_WINDOW=3600

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="your-email@gmail.com"
SMTP_FROM_NAME="FastAPI Service"

# MinIO 对象存储配置
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_SECURE=False
MINIO_DEFAULT_BUCKET="default"

# Elasticsearch 配置
ES_HOST="http://localhost:9200"
ES_USER=""
ES_PASSWORD=""
ES_VERIFY_CERTS=False
ES_DEFAULT_INDEX="default"

# Kafka 配置
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_DEFAULT_TOPIC="default"

# OpenAI Embedding 配置
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_EMBEDDING_DIMENSIONS=1536

# OpenAI Chat 配置
OPENAI_CHAT_MODEL="gpt-3.5-turbo"  # 聊天模型，可选: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
OPENAI_CHAT_TEMPERATURE=0.7  # 温度参数，控制随机性 (0-2)
OPENAI_CHAT_MAX_TOKENS=2000  # 最大token数

# 聊天配置
CONVERSATION_MAX_MESSAGES=20  # 会话最大消息数
CONVERSATION_TTL_DAYS=7  # 会话过期时间（天）
CHAT_STOP_TOKEN_TTL=300  # 停止令牌有效期（秒）

# 日志配置
# 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG_LOG_LEVEL="DEBUG"          # 开发模式日志级别（DEBUG=True时使用）
PRODUCTION_LOG_LEVEL="INFO"      # 生产模式日志级别（DEBUG=False时使用）

# CORS 配置（开发环境允许所有源，生产环境请修改）
CORS_ORIGINS=["*"]
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

